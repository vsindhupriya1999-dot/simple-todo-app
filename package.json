{
  "name": "rest-api-simple-todo-app",
  "version": "1.0.0",
  "license": "MIT",
  "author": "jaktestowac.pl",
  "description": "A simple REST API todo app example using Express and TypeScript.",
  "scripts": {
    "start": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:api": "jest tests/api",
    "test:e2e": "playwright test tests/e2e",
    "test:api-smoke": "jest tests/api/smoke.test.ts --runInBand",
    "test:all": "jest && playwright test tests/e2e"
  },
  "dependencies": {
    "express": "^4.18.2",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5",
    "@types/express": "^4.17.21"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "@playwright/test": "^1.40.1"
  }
}
